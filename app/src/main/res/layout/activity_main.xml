<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="1.0"
    app:layout_scrollFlags="scroll"
    tools:context="com.example.administrator.project207.activities.MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreen"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="70dp"
        android:layout_weight="0.06"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myinfo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/managemyinfo" />

        <ImageView
            android:id="@+id/booking"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/book" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/bookcheck"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/checkbook" />

        <ImageView
            android:id="@+id/callbook"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/callbook" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/histroy"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/myhistory" />

        <ImageView
            android:id="@+id/waitinglist"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/checkorder" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar2"
        style="@android:style/Widget.Material.Light.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:max="@android:integer/status_bar_notification_info_maxnum"
        android:progress="@android:integer/status_bar_notification_info_maxnum"
        android:scrollbarSize="@android:dimen/thumbnail_width"
        android:theme="@style/Base.AlertDialog.AppCompat.Light" />


</LinearLayout>
